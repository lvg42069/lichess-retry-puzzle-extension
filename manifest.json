{
  "manifest_version": 3,
  "name": "Lichess Retry Puzzles",
  "version": "1.5.0",
  "description": "Adds buttons on Lichess Storm/Racer results to open failed or slow puzzles in new tabs for retry.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://lichess.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://lichess.org/storm*",
        "https://lichess.org/*/storm*",
        "https://lichess.org/racer*",
        "https://lichess.org/*/racer*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ]
}